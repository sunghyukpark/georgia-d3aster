<h1>Disasters in Georgia</h1>

<h2>Tree Map</h2>
<%= render 'map' %>


<div><%= link_to 'Import Existing File', '/import/new' %></div>
<div><%= link_to 'Add New Hazard Information', new_hazard_path, id:'new-link', remote: true %></div>
<div id="new-hazard-form"></div>


<h2>Hazards</h2>
<div id="hazard-list">
  <% @hazards.each do |h| %>
    <div id="hazard-<%= h.id %>">
      <%= h.name %>
      <%= link_to 'Detail', hazard_path(h) %>
      <%= link_to 'Edit', edit_hazard_path(h), remote: true %>
      <%= link_to 'Remove', h, method: :delete, data:{ confirm: 'Are you sure?'}, remote: true%>
    </div>
  <% end %>
</div>

